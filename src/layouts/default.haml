%html{ :lang=>"en" }
  %head
    - if environment == :build
      = partial 'options'
    = partial 'meta'
    %title {Title}
    = partial 'authorship'
    = partial 'style'
    = partial 'modernizr'
  %body
    = partial 'aside'
    = partial 'nav'
    = yield
    = partial 'footer'

    / jQuery
    = partial 'jq'

    / Twitter Bootstrap
    = partial 'bt'

    / Google Maps
    = partial 'maps'

    / Google Analytics
    = google_analytics_universal_tag
